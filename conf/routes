# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET     /                                       Application.index

#GET     /                                      Users.index
GET		/user/{<\d+>id}/?						Users.show
GET     /user/{<\d+>id}/image/?                 Users.image
POST    /user/?               					Users.persist
PUT     /user/{<\d+>id}/?      					Users.update
DELETE  /user/{<\d+>id}/?      					Users.delete

#postit 
POST    /postit/?               				Postits.create
GET	    /postit									Postits.all
GET	    /postit/?								Postits.byUserAndScene
PUT     /postit/{id}               				Postits.update
DELETE  /postit/{id}               				Postits.delete

GET	    /scene/									Scenes.all
GET	    /scene/{id}								Scenes.byUser


#New Routes for Project Controller Wrapper
GET   /project/{id}                				Projects.getProject
GET   /project/act/{id}							Projects.getActsByProject
GET   /project/act/scene/{id}					Projects.getScenesByAct
GET   /project/act/scene/task/{id}				Projects.getTasksByScene
GET   /project/act/scene/task/comment/{id}		Projects.getCommentsByTask
#GET   /project/act/scene/task/postit/{id}		Projects.getPostitsByTask




# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
