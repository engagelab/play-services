# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET     /                                       Application.index

#GET     /                                      Users.index
GET		/user/{<\d+>id}/?						Users.show
GET     /user/{<\d+>id}/image/?                 Users.image
POST    /user/?               					Users.persist
PUT     /user/{<\d+>id}/?      					Users.update
DELETE  /user/{<\d+>id}/?      					Users.delete

#postit 
POST    /postit/?               				Postits.create
GET	    /postit									Postits.all
GET	    /postit/?								Postits.byUserAndScene
PUT     /postit/{id}               				Postits.update
DELETE  /postit/{id}               				Postits.delete

GET	    /scene/									Scenes.all
GET	    /scene/{id}								Scenes.byUser


#New Routes for Project Controller Wrapper
GET   /project	                				Projects.getAllProjects
GET   /project/{id}                				Projects.getProject
GET   /acts/project/{id}						Projects.getActsByProject
GET   /scenes/act/{id}							Projects.getScenesByAct
GET   /tasks/scene/{id}							Projects.getTasksByScene
GET   /comments/task/{id}						Projects.getCommentsByTask

GET   /comments/p/?							Comments.findByUserTaskAndProject
GET   /comments/?							Comments.findByUserAndTask





# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
