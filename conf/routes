# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET     /                                     	Application.index
POST    /upload                                 Application.upload

#GET     /                                      Users.index
GET		/user/{<\d+>id}/?						Users.show
GET     /user/{<\d+>id}/image/?                 Users.image
POST    /user/?               					Users.persist
PUT     /user/{<\d+>id}/?      					Users.update
DELETE  /user/{<\d+>id}/?      					Users.delete


# Routes for Project Controller 
GET   		/project	                				Projects.getAllProjects
GET   		/project/{id}                				Projects.getProject
GET   		/acts/project/{id}							Projects.getActsByProject
GET   		/scenes/act/{id}							Projects.getScenesByAct
GET   		/tasks/scene/{id}							Projects.getTasksByScene

# Get IDs for resources
GET			/run/id/{title}								Groups.getRunIdByTitle
GET			/project/id/{title}							Projects.getProjectIdByTitle
GET			/act/id/{title}								Projects.getActIdByTitle
GET			/scene/id/{title}							Projects.getSceneIdByTitle
GET			/task/?										Projects.getTaskIdByTitle
PUT			/taskdata/?									Groups.updateTaskData


# Routes for Group Controller 

GET  		/comments									Groups.showAllComments
GET  		/comments/?									Groups.showCommentbyGT
POST  		/comments/									Groups.postComment
PUT  		/comments/{id}								Groups.updateComment
DELETE  	/comments/{id}								Groups.deleteComment
GET  		/CommenstbyGroup/{name}							Groups.showCommentbyG
GET  		/showBBCommentbyG/{name}					Comments.index
								

#Group Operation routs
GET	    	/groups										Groups.all
GET	    	/groups/{id}								Groups.getById
DELETE	    /groups/{id}								Groups.deleteGroup

GET	    	/run/{title}								Groups.getRunIdByTitle


# Routes for Task Datum									
GET  		/taskdata/?									Projects.getTaskIdByTitle
PUT  		/taskdata/									Groups.updateTaskData

#Fahied Testing  JQuery work
GET   		/fahied/									FahTest.index









# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
